{
  "compilerOptions": {
    "target": "ES2017", // Compatibilidad de salida
    "module": "ESNext", // Necesario para Rollup
    "moduleResolution": "Node",
    "declaration": true, // Generar archivos .d.ts
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
